<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/head_img"
        android:background="#6E69FF">

        <TextView
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="Health Calc"
            android:textSize="45sp"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10sp"
            android:textColor="@color/white"
            style=""/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/kcal"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="45sp"
            android:layout_marginTop="30sp"/>

    </RelativeLayout>

        <ImageView
            android:id="@+id/waveTop2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_wave__top"
            android:layout_below="@id/head_img" />


    <TextView
        android:id="@+id/login_text_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/waveTop2"/>

    <TextView
        android:id="@+id/text_login_fazer_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faça login para continuar"
        android:layout_below="@id/login_text_"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="25dp"/>

    <EditText
        android:id="@+id/ediText_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_login_fazer_"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:hint="E-mail"
        android:padding="15dp"
        android:drawableStart="@drawable/ic_email_"
        android:drawablePadding="8dp"
        android:background="@drawable/bordinha"/>

    <EditText
        android:id="@+id/ediText_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ediText_email"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Senha"
        android:background="@drawable/bordinha"
        android:padding="15dp"
        android:drawableStart="@drawable/ic_password_"
        android:drawablePadding="8dp"/>

    <Button
        android:id="@+id/button_entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Entrar"
        android:layout_below="@id/ediText_senha"
        android:textColor="@android:color/white"
        android:background="@drawable/buttom_borda"/>

    <CheckBox
        android:id="@+id/check_box_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lembrar-me"
        android:layout_below="@id/button_entrar"
        android:layout_alignEnd="@id/button_entrar"/>

    <TextView
        android:id="@+id/text_esqueci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueci a senha"
        android:layout_below="@id/check_box_"
        android:layout_alignEnd="@id/check_box_"
        android:clickable="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#59c9da"/>

    <TextView
        android:id="@+id/criar_conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar uma conta agora"
        android:layout_below="@id/text_esqueci"
        android:layout_alignEnd="@id/check_box_"
        android:clickable="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#59c9da"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Não tem uma conta?"
        android:gravity="center"
        android:layout_below="@id/text_esqueci"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="50dp"/>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_wave_bottom"
        android:layout_alignParentBottom="true"
        android:scaleType="fitEnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desenvolvido por DS2M-B"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>