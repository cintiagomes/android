        android:textColor="@color/black"
        android:textSize="13sp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="450dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="194dp"
        android:layout_height="27dp"
