        android:textSize="14sp"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="336dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="194dp"
        android:layout_height="27dp"
